<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="274dp"
        android:layout_height="282dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="500dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="506dp"
        android:layout_marginBottom="483dp"
        android:contentDescription="@string/app_logo"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="440dp"
        android:layout_marginTop="361dp"
        android:layout_marginEnd="426dp"
        android:layout_marginBottom="394dp"
        android:ems="10"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:visibility="visible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="444dp"
        android:layout_marginTop="437dp"
        android:layout_marginEnd="427dp"
        android:layout_marginBottom="318dp"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="247dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="526dp"
        android:layout_marginTop="519dp"
        android:layout_marginEnd="507dp"
        android:layout_marginBottom="211dp"
        android:text="Button"
        android:visibility="visible"
        tools:text="@string/login"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/linkForgot"
        android:layout_width="196dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="532dp"
        android:layout_marginTop="595dp"
        android:layout_marginEnd="552dp"
        android:layout_marginBottom="185dp"
        android:text="@string/forgot"
        android:textColor="#000000"
        android:visibility="visible"
        tools:visibility="visible" />

</RelativeLayout>