<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#5E5555"
                    app:srcCompat="@drawable/logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/warehouse"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_weight="1.5"
                        android:background="#B58B9116"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:onClick="warehouse">

                        <ImageView
                            android:id="@+id/WarehouseImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:contentDescription="Warehousing"
                            app:srcCompat="@drawable/warehousing" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="WAREHOUSE MANAGEMENT"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Storeroom"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_weight="1.5"
                        android:background="#B5626842"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:onClick="store"
                        >

                        <ImageView
                            android:id="@+id/storeImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:contentDescription="Check In Tab"
                            app:srcCompat="@drawable/storeroom" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="STOREROOM MANAGEMENT"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/shelf"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_weight="1.5"
                        android:background="#B5163F91"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:onClick="shelf"
                        >

                        <ImageView
                            android:id="@+id/shelfImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:contentDescription="Stock Tab"
                            app:srcCompat="@drawable/shelf" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="STOCK"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/POS"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_weight="1.5"
                        android:background="#B5163F91"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:onClick="pos"
                        >

                        <ImageView
                            android:id="@+id/posImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:contentDescription="Stock Tab"
                            app:srcCompat="@drawable/pos" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="POINT OF SALE"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</RelativeLayout>