<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewStock">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="305dp"
        android:layout_marginEnd="375dp"
        android:layout_marginBottom="428dp"
        android:text="Add product details here"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="341dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/gridlayout_border">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Barcode:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_column="4"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Quantity:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Category:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Type:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Weight"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Manufacture Date:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Expiry Date:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Fragile:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Location:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="6" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="Perishable:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="7" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_column="1"
            app:layout_row="6" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_column="1"
            app:layout_row="7" />

        <Button
            android:id="@+id/buttonBarScan"
            android:layout_width="126dp"
            android:layout_height="35dp"
            android:text="Scan"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textViewBar"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:text="barcode"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="259dp"
            android:layout_height="45dp"
            android:text="Name:"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="2" />


    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>